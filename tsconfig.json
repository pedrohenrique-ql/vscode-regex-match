{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "outDir": "build",
    "lib": ["ES2022"],
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": ["node_modules"]
}
